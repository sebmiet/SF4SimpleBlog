{% extends 'admin/admin.html.twig' %}
{#{% block header %}{{ title }}{% endblock %}#}
{% block body %}
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 mx-auto">
                    {#<h4>Wybierz artukuł do edycji lub usunięcia.</h4>#}
                            <div class="alert alert-danger alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>UWAGA!!!</strong>  Wszystkie artykuły, które usuniesz, zostaną trwale usunięte z bazy danych bez możliwości ich przywrócenia!
                            </div>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                        <tr>
                            <th id="id">#</th>
                            <th id="title">Tytuł</th>
                            <th id="subtitle">Podtytuł</th>
                            <th id="postdate">Opublikowany</th>
                            <th id="author">Autor</th>
                            <th>Operacje</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.title }}</td>
                            <td>{{ article.subtitle }}</td>
                            <td>{{ article.postdate|date('d-m-Y') }}</td>
                            <td>{{ article.author }}</td>
                            <td class="table-warning"><a href="{{ path('editarticle', {'id': article.id, 'title': article.title}) }}">Edytuj</a><br><a href="#">Usuń</a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>



                </div>
            </div>
        </div>
    </article>

{% endblock %}