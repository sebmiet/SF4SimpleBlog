{% extends 'base.html.twig' %}
{% block body %}


    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {%  for article in articles %}
                <div class="post-preview">
                    <a href="post.php">
                        <h2 class="post-title">
                            {{ article.title }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ article.subtitle }}
                        </h3>
                    </a>
                    <p class="post-meta">Opublikowany
                        {{ article.postdate|date("d-m-Y") }} przez
                        <a href="about.php">{{ article.author }}</a>
                        </p>
                </div>
                <hr>
                {% endfor %}

                <!-- Pager -->
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                </div>
            </div>
        </div>
    </div>

    <hr>


{% endblock %}